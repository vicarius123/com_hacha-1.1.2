<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="id"
			type="text"
			default="0"
			label="COM_HACHA_FORM_LBL_CATEGORY_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
		/> 

 <field name="title"
			type="editor"
			buttons="true"
			class="inputbox"
			filter="safehtml"
			required="true" 
			label="COM_HACHA_FORM_LBL_CATEGORY_TITLE"
			description="COM_HACHA_FORM_DESC_CATEGORY_TITLE" 
			hint="COM_HACHA_FORM_LBL_CATEGORY_TITLE"
		/> 

 
		<field name="alias"
			type="text"
			class="inputbox"
			label="COM_HACHA_FORM_LBL_CATEGORY_ALIAS"
			description="COM_HACHA_FORM_DESC_CATEGORY_ALIAS" 
			hint="COM_HACHA_FORM_LBL_CATEGORY_ALIAS"
			alias_generator="2309855"
		/> 

 
		<field name="image"
			type="FileMultiple"
			label="COM_HACHA_FORM_LBL_CATEGORY_IMAGE"
			description="COM_HACHA_FORM_DESC_CATEGORY_IMAGE" 
			hint="COM_HACHA_FORM_LBL_CATEGORY_IMAGE"
			required="true" 
			upload_directory="/media/menu/"
		/> 

 <field name="title_en"
			type="editor"
			buttons="true"
			class="inputbox"
			filter="safehtml"
			required="true" 
			label="COM_HACHA_FORM_LBL_CATEGORY_TITLE_EN"
			description="COM_HACHA_FORM_DESC_CATEGORY_TITLE_EN" 
			hint="COM_HACHA_FORM_LBL_CATEGORY_TITLE_EN"
		/> 

 
		<field name="created_by"
			type="createdby"
			default=""
			label="COM_HACHA_FORM_LBL_CATEGORY_CREATED_BY"
			description="COM_HACHA_FORM_DESC_CATEGORY_CREATED_BY" 
			hint="COM_HACHA_FORM_LBL_CATEGORY_CREATED_BY"
		/> 

 
		<field name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
			labelclass="control-label"
		/> 

 
		<field name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="0"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field> 

 
		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		/>

	</fieldset>

</form>
